  if (height) params.append('h', height.toString());
  if (format) params.append('f', format);
  params.append('q', CDN_CONFIG.images.quality.toString());
  
  const queryString = params.toString();
  return `${baseUrl}${path}${queryString ? `?${queryString}` : ''}`;
};
